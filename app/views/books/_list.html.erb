



    <div class="col-md-3">
      <h2>User info</h2>
      
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: "100x100" %>
      <table class="table">
        <tbody>
          <tr>
          </tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      
      <div class="row">
        <%= link_to "", edit_user_path(user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>
      
      <h2 class="mt-3">New book</h2>
      <%#= form_with model: @book_new, local:true do |t| %>
      <!--<div class="form">-->
      
      <div class="text-danger">
        <% if book_new.errors.any? %>
        <%= book_new.errors.count %>件のエラーが発生しました
        <% book_new.errors.full_messages.each do |message| %>
        <div><%= message %></div>
        <% end %>
        <% end %>
      </div>
      
        <%= form_with model:@book_new, local:true do |t| %>
        <div class="form-group">
          <lable for="book_title">Title</lable>
          <p><%= t.text_field :title %></p>
        </div>
        <div class="form-group">
          <lable for="book_opinion">Opinion</lable>
          <p><%= t.text_area :body %></p>
        </div>
        <div class="form-group">
          <%= t.submit "Create Book" %>
        </div>
        <% end %>
    </div>
    